<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>


<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane fx:id="root"
          fx:controller="com.tminions.app.ReportGenerationScreen"
          styleClass="main-panel"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10">
          
	<columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="10.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" percentHeight="20.0" valignment="BOTTOM"/>
        <RowConstraints vgrow="SOMETIMES" percentHeight="20.0" valignment="TOP"/>
        <RowConstraints vgrow="SOMETIMES" percentHeight="20.0" valignment="TOP"/>
        <RowConstraints vgrow="SOMETIMES" percentHeight="20.0" valignment="TOP"/>
        <RowConstraints vgrow="SOMETIMES" percentHeight="20.0" valignment="TOP"/>
        <RowConstraints vgrow="SOMETIMES" percentHeight="20.0" valignment="TOP"/>
    </rowConstraints>
    
    <Label text="Select Reports below"
           GridPane.columnIndex="1"
           GridPane.columnSpan="2"
           GridPane.rowIndex="0"/>
           
    <Button text="Language of Service report" onAction="#selectReport"
            GridPane.columnIndex="1"
            GridPane.columnSpan="1"
            GridPane.rowIndex="2"
            prefWidth="Infinity"/>
            
     <Button text="Type Of Institution/Organization where Client received services report" onAction="#selectReport2"
            GridPane.columnIndex="1"
            GridPane.columnSpan="1"
            GridPane.rowIndex="3"
            prefWidth="Infinity"/>
            
</GridPane >
          